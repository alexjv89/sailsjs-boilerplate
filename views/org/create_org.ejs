<%
	// var create_or_edit = GeneralService.createOrEdit(req.url);
	var create_or_edit = 'Create';
%>
<div class="ui container">
	<div class="ui breadcrumb">
		<a class="section" href='/orgs%>'>Orgs</a>
		<i class="right angle icon divider"></i>
		<div class="section">Create org</div>
	</div>
	<h1 style='margin-top:0;'>
		Create Org
		<!-- <a href="/org/create" class='ui basic teal right floated button'>Create new org</a> -->
	</h1>
	<div class="ui grid">
		<div class='four wide tablet computer only column'></div>
		<div class='eight wide table eight wide computer sixteen wide mobile column'>
			<h4 class="ui horizontal divider header">
				<!-- <i class="list icon"></i> -->
				<%=create_or_edit%> Org
			</h4> 
			<form class="ui <%=org.status%> form " action="" method='post'>
				<!-- <h4 class="ui dividing header">Shipping Information</h4> -->
				
				<div class="field">
                    <label>Name</label>
                    <input type="text" name="name" placeholder="org name" value="<%=org.name%>">
                </div>	
            	<% if (message) { %>
					<div class="ui error message" style="display: block;">
						<div class="header">Error</div>
						<p><%=message%></p>
					</div>
				  <% } %>
				
				<input type="submit" class="ui teal button" value="Create org">
				<div class="ui success message">
					<div class="header">Org <%=create_or_edit%></div>
					You just <%=create_or_edit%> an organisation
				</div>
			</form>
		</div>
		<div class='sixteen wide tablet four wide computer sixteen wide mobile column'>
			<!-- <div class='ui segment'> -->
				
				<br/><br/>
				<!-- <b>Email:</b> 
				For now we support only gmail address. The gmail address can be a business gmail address also. 
				<br/><br/>
				<b>Token:</b>
				You will need to enter token detail here for now. It will be automated later.  -->
			<!-- </div> -->
		</div>
	</div>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.22.2/moment.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/moment-timezone/0.5.21/moment-timezone.min.js"></script>
<script type="text/javascript">
	$(document).ready(function(){
		$('.dropdown').dropdown();
		$('.ui.form').form({
			fields: {
				name : 'empty',
			},
			onSuccess:function(e,fields){
				$(this).addClass('loading');
			},
		});
	})
</script>

