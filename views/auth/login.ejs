<div class='ui container' style="margin-top: 40px;">
	<div class='ui stackable *columns centered grid'>
		<!-- <div class='three wide tablet computer only column'></div> -->
		<div class='eight wide tablet six wide computer two wide mobile  column'>
			<div class='ui segment'>
				<h1 class="ui header">Login</h1>
				<!-- <script src="https://unpkg.com/react@18/umd/react.development.js" crossorigin></script>
				<script src="https://unpkg.com/react-dom@18/umd/react-dom.development.js" crossorigin></script>
				<script src="https://unpkg.com/@babel/standalone/babel.min.js"></script> -->
				<!-- <script src="/dependencies/react.development.js"></script>
				<script src="/dependencies/react-dom.development.js"></script>
				<script src="/dependencies/babel.min.js"></script> -->

				<!-- <div id="login-header" class="text-sm"></div>
				<script src="js/Login.jsx" type="text/babel">
				</script> -->
				<form action="/login?redirect=<%=req.query.redirect%>" method="post" class='ui <%-error?"error":""%> form'>
					<div class="ui error message">
						<div class="header">Please correct error in form</div>
						<p><%-error%></p>
					</div>
					<div class="field">
						<div class="field ui left icon input">
							<input name="email" type="text" placeholder="Email" value="<%=email%>"/>
							<i class="envelope icon"></i>
						</div>
					</div>
					<div class="field">
						<div class="field ui left icon input">
							<input name="password" type="password" id="password_input" placeholder="Password"/>
							<i class="lock icon"></i>
						</div>
					</div>
					<div class="inline field">
						<div class="ui checkbox" id="login_checkbox">
							<input type="checkbox" tabindex="0" id="show_password" class="hidden">
							<label>Show Password</label>
						</div>
						<a href="/forgot" style="float:right;">Forgot your password?</a>
					</div>
					<!-- <br> -->
					<!-- <br> -->
					<input type="submit" class="ui teal fluid button" value="Sign in" />


					<div class='ui horizontal divider'>Or</div>
					<a class="ui labeled basic icon fluid button" href='/auth/google' id='login_with_google'>
					  <i class="icon">
					  	<img class="" src="https://developers.google.com/identity/images/g-logo.png" style="width:16px; height:16px">
					  </i>
					  Sign In with Google
					</a>

				</form>
				
			</div>
			<div class="ui basic center aligned segment">
				<a href="/signup">Create free account</a>
			</div>
		</div>
		<!-- <div class='three wide tablet computer only column'></div> -->
	</div>
	
</div>
<script>
	$(document).ready(function(e){
		$('#login_with_google').click(function(){
			$('form').addClass('loading');
		})
		$('#login_checkbox').checkbox()
		$('#show_password').change(function() {
            var password_input = $('#password_input');
            if (this.checked) {
                password_input.attr('type', 'text');
            } else {
                password_input.attr('type', 'password');
            }
        });
	})
</script>